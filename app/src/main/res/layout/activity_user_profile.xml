<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile">


  <TextView
      android:id="@+id/profile_head"
      android:layout_width="410dp"
      android:layout_height="155dp"
      android:layout_marginTop="48dp"
      android:layout_marginBottom="49dp"
      android:background="#CA584A"
      android:paddingTop="10dp"
      android:text=""
      android:textAlignment="center"
      android:textColor="@color/white"
      app:layout_constraintBottom_toTopOf="@+id/textView4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/header_frag2"
      android:layout_width="411dp"
      android:layout_height="0dp"
      android:background="#D33D32"
      android:paddingTop="10dp"
      android:text=""
      android:textAlignment="center"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="@+id/logo2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/logo2"
      android:layout_width="62dp"
      android:layout_height="0dp"
      android:src="@drawable/logo2"
      app:layout_constraintBottom_toTopOf="@+id/profile_head"
      app:layout_constraintEnd_toEndOf="@+id/header_frag2"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/profile_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="14dp"
      android:text="UserName"
      android:textColor="@color/white"
      android:textSize="24dp"
      app:layout_constraintBottom_toBottomOf="@+id/profile_head"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="57dp"
      android:text="Email"
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/textView5"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginTop="336dp"
      android:text="Phone Number"
      android:textSize="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/User_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="57dp"
      android:layout_marginEnd="16dp"
      android:text="User's number"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/User_email" />

  <TextView
      android:id="@+id/User_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="49dp"
      android:layout_marginEnd="16dp"
      android:text="User's email"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/profile_head" />

  <ImageView
      android:id="@+id/Profile_picture"
      android:layout_width="94dp"
      android:layout_height="63dp"
      android:layout_marginTop="27dp"
      android:layout_marginBottom="19dp"
      app:layout_constraintBottom_toTopOf="@+id/profile_username"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/header_frag2"
      app:srcCompat="@drawable/ic_profile" />

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomnav"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="?android:attr/windowBackground"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>